{
  "name": "Webpack-4-Boilerplate",
  "version": "1.0.1",
  "description": "Webpack 4 Boilerplate",
  "main": "index.js",
  "loglevel": "silent",
  "scripts": {
    "build": "npm run clean -s && npm run production -s",
    "clean": "rimraf public",
    "dev": "cross-env webpack --config ./webpack/webpack.dev.js",
    "production": "cross-env webpack --progress --hide-modules --config ./webpack/webpack.prod.js",
    "staging": "cross-env webpack --progress --hide-modules --config ./webpack/webpack.staging.js",
    "start": "webpack-dev-server --open --config ./webpack/webpack.dev.js",
    "update": "yarn upgrade-interactive --latest",
    "lint": "eslint ./src --fix"
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "7.10.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "8.1.0",
    "brotli-webpack-plugin": "^1.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "6.0.2",
    "cross-env": "7.0.2",
    "css-hot-loader": "1.4.4",
    "css-loader": "3.5.3",
    "eslint": "^7.2.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-compat": "^3.1.1",
    "extract-loader": "5.1.0",
    "file-loader": "6.0.0",
    "html-loader": "1.1.0",
    "html-webpack-harddisk-plugin": "1.0.1",
    "html-webpack-plugin": "4.3.0",
    "ip": "1.1.5",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "^4.13.0",
    "node-sass-json-importer": "4.3.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "path": "0.12.7",
    "postcss-import": "^12.0.1",
    "postcss-loader": "3.0.0",
    "pug": "3.0.0",
    "pug-html-loader": "1.1.5",
    "pug-loader": "2.4.0",
    "purgecss-webpack-plugin": "^2.0.6",
    "raw-loader": "4.0.1",
    "rimraf": "3.0.2",
    "sass-loader": "^8.0.0",
    "source-map-loader": "1.0.0",
    "style-loader": "1.2.1",
    "stylelint": "13.6.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.17.2",
    "tailwindcss-debug-screens": "^0.1.0",
    "terser-webpack-plugin": "^3.0.3",
    "url-loader": "^4.1.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-format-messages": "2.0.6",
    "webpack-merge": "4.2.2",
    "webpack-messages": "2.0.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "core-js": "3",
    "current-device": "^0.10.1",
    "hammerjs": "^2.0.8",
    "jquery": "^3.4.1",
    "popper.js": "^1.14.7",
    "regenerator-runtime": "^0.13.2",
    "sass-mq": "5.0.1",
    "tailwindcss": "^1.4.6",
    "whatwg-fetch": "^3.0.0"
  }
}
